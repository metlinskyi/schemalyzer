{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Console",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "Console",
            "args": ["../mssql/MsSql.dll","server=tcp:localhost,1433;user id=sa;password=Passw0rd!"],
            "cwd": "${workspaceFolder}/../bin/Debug/app/",
            "console":"externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": "xUnit",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": ["test", "tests/tests.csproj", "--nologo"],
            "cwd": "${workspaceFolder}/../",
            "console":"integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Build MsSql",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": ["build", "Providers/MsSql/MsSql.csproj"],
            "cwd": "${workspaceFolder}",
            "console":"integratedTerminal",
            "stopAtEntry": false
        }
    ]
}